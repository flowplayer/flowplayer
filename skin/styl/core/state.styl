
.{root}

   &.is-splash, &.is-poster
      cursor pointer

      .fp-controls, .fp-fullscreen, .fp-unload, .fp-time, .fp-embed
         display none !important

   &.is-poster .fp-engine
      top -9999em

   &.is-loading
      .fp-waiting
         display block

      .fp-controls, .fp-time
         display none

      .fp-ui
         background-position -9999em

   &.is-seeking
      .fp-waiting
         display block

   &.is-fullscreen
      position fixed !important
      top 0 !important
      left 0 !important
      border 0 !important
      margin 0 !important
      width 100% !important
      height 100% !important
      max-width 100% !important
      z-index 99999 !important
      box-shadow 0 !important
      background-image none !important
      background-color #3

      .is-rtl&
         left auto !important
         right 0 !important

   &.is-error
      border 1px solid #90
      background #fd !important

      h2
         font-weight bold
         font-size large
         margin-top 10%

      .fp-message
         display block

      object, video, .fp-controls, .fp-time, .fp-subtitle
         display none

   &.is-ready.is-muted
      .fp-mute
         opacity 0.5


   // mouseout
   &.is-mouseout
      .fp-controls
         height 0
         transition height fade_speed fade_delay

      .fp-timeline
         margin 0 !important

      .fp-timeline
         transition height fade_speed fade_delay, top fade_speed fade_delay, margin fade_speed fade_delay
         height 4px
         top 0
         border-radius 0

      .fp-fullscreen, .fp-unload, .fp-elapsed, .fp-remaining, .fp-duration, .fp-embed, .fp-volume, .fp-play
         opacity 0
         transition opacity fade_speed fade_delay


   // mouseover / fixed-controls
   &.is-mouseover, &.fixed-controls
      .fp-controls
         height controls_height

      .fp-fullscreen, .fp-unload, .fp-elapsed, .fp-remaining, .fp-duration, .fp-embed, .fp-logo, .fp-volume, .fp-play
         opacity 1


   &.fixed-controls
      .fp-volume
         display block

      .fp-controls
         bottom -(controls_height)

         .is-fullscreen&
            bottom 0

      .fp-time em
         bottom -(controls_height - spacing)
         opacity 1 !important

         .is-fullscreen&
            bottom spacing

   &.is-disabled
      .fp-progress
         background-color #9

