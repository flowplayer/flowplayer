
.{root}

   .fp-time
      text-shadow 0 0 1px #0
      font-weight bold
      font-size font_size
      color #f
      width 100%

      // inverted time
      &.is-inverted
         .fp-duration
            display none

         .fp-remaining
            display inline

      em
         width time_width
         height timeline_height
         line-height timeline_height
         text-align center
         position absolute
         bottom spacing
         font-style normal

      .no-time&
         display none

   .fp-elapsed
      left spacing

   .fp-remaining, .fp-duration
      right right_margin
      color #b

   .fp-remaining
      display none

   &.color-light
      .fp-time
         color #2
         text-shadow 0 0 1px #f

      .fp-remaining, .fp-duration
         color #6


   // top / left
   &.aside-time .fp-time
      absolute spacing spacing
      bottom auto !important
      width 200px

      strong, em
         position static

      .fp-elapsed
         margin-right spacing



