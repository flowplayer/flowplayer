
.{root}

   .fp-volume
      position absolute
      height volume_height
      bottom (controls_height / 2) - (volume_height / 2)
      right spacing

      .has-menu&
        right spacing + menu_width

      .is-rtl&
         right auto
         left spacing
      .is-rtl.has-menu&
         left spacing + menu_width

   .fp-mute
      position relative
      width mute_width
      height mute_height
      float left
      top (volume_height / 2) - (mute_height / 2)
      cursor pointer

      .is-rtl&
         float right

      .no-mute&
         display none

   .fp-volumeslider
      width volume_width
      height volume_height
      cursor col-resize
      float left

      .is-rtl&
         float right

      .no-volume&
         display none

   .fp-volumelevel
      height 100%
