

/* Cross browser CSS3 */

vendor-prefixes = webkit moz

vendor(prop, args)
   for prefix in vendor-prefixes
      {'-' + prefix + '-' + prop}: args
   {prop}: args

box-shadow()
   vendor('box-shadow', arguments)

border-radius()
   vendor('border-radius', arguments)

transition()
   vendor('transition', arguments)

transition-delay()
   vendor('transition-delay', arguments)

transform()
   vendor('transform', arguments)

animation()
  vendor('animation', arguments)

animation-delay()
  vendor('animation-delay', arguments)

gradient(from = #f9, to = #d, args...)
   background-color from
   background-image -moz-linear-gradient(from, to) args
   background-image -webkit-gradient(linear, 0 0, 0 100%, from(from), to(to)) args

radial-gradient(from = #f9, to = #d, size = 50%)
   background-color from
   background -moz-radial-gradient(center, from, to) no-repeat to
   background -webkit-gradient(radial, size size, 0, size size, 500, from(from), to(to)) no-repeat to


opacity(n)
   opacity: n
   filter: 'progid:DXImageTransform.Microsoft.Alpha(Opacity=%s)' % round(n * 100)

// shortcuts
bg(args...)
   if typeof(args[1]) == 'unit'
      background-position args
   else
      background-color args


block(width = 25px, height = width)
   display block
   width width
   height height

circle(size)
   block size
   border-radius size


-pos(type, args)
   position unquote(type)
   top args[0]
   left args[1]

fixed()
   -pos('fixed', arguments)

absolute()
   -pos('absolute', arguments)

relative()
   -pos('relative', arguments)

