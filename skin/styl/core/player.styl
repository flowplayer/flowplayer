
.{root}
   position relative
   width 100%
   text-align left

   // mobile friendly background images
   background-size cover

   // thanks: http://ansciath.tumblr.com/post/7347495869/css-aspect-ratio
   display inline-block

   // css reset
   *
      font-weight inherit
      font-family inherit
      font-style inherit
      text-decoration inherit
      font-size 100%
      padding 0
      border 0
      margin 0
      list-style-type none

   a:focus
      outline 0

   video
      width 100%

   // http://blog.millermedeiros.com/2011/03/html5-video-issues-on-the-ipad-and-how-to-solve-them/
   &.is-ipad video
      -webkit-transform:translateX(-2048px)

      .is-ready&
         -webkit-transform:translateX(0)


   .fp-engine, .fp-ui, .fp-message
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      cursor pointer
      z-index 1

   .fp-message
      display none
      text-align center
      padding-top 5%

      h2
         font-size 120%
         margin-bottom 1em

      p
         color #6
         font-size 95%

   // background image
   .fp-fullscreen, .fp-unload, .fp-mute, .fp-embed
      background-image url(img)

      .color-light&
         background-image url(img_dark)

   .fp-controls
      position absolute
      bottom 0
      width 100%

      .no-background&
         bg transparent !important
         gradient transparent transparent !important

      .is-fullscreen&
         bottom 3px

      .is-mouseover&
         bottom 0

   .fp-waiting
      display none
      margin 19% auto
      text-align center

      *
         box-shadow 0 0 5px #3

      em
         width 1em
         height @width
         border-radius @width
         bg rgba(#f, 0.8)
         display inline-block
         animation pulse .6s infinite
         margin .3em
         opacity 0

         &:nth-child(1)
            animation-delay .3s

         &:nth-child(2)
            animation-delay .45s

         &:nth-child(3)
            animation-delay .6s

      // no animation support
      p
         color #c
         font-weight bold


